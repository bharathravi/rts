<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wavy_blue_background2"
    android:columnCount="3"
    android:orientation="vertical" >

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="76dp"
        android:text="Save New Pin" />

    <TextView
        android:id="@+id/reenter_pin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="54dp"
        android:text="Re-enter New Pin"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/reenter_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reenter_pin_label"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/reenter_pin_label"
        android:ems="6"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/new_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reenter_pin"
        android:layout_alignLeft="@+id/reenter_pin"
        android:layout_marginBottom="32dp"
        android:ems="6"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/new_pin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/new_pin"
        android:layout_alignParentLeft="true"
        android:text="New Pin"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>